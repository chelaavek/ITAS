<% if current_admin_user && !current_admin_user.review %>
    <%= controller.redirect_to new_review_path %>
<% end %>

<% if current_admin_user.role == 'banned' || !current_admin_user %>
    <%= controller.redirect_to root_path %>
<% end %>

<h1><% t('editing_review') %></h1>

<%= render 'form', review: @review %>

<%= link_to 'Show', @review %> |
<%= link_to 'Back', reviews_path %>
