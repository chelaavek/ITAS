<% if current_admin_user && current_admin_user.review  %>
    <%= controller.redirect_to edit_review_path(current_admin_user.review.id) %>
<% end %>

<% if current_admin_user.role == 'banned' %>
    <%= controller.redirect_to root_path %>
<% end %>

<% unless current_admin_user %>
    <%= controller.redirect_to root_path %>
<% end %>

<h3 style = "text-align: center"><% t('new_review') %></h3>

<%= render 'form', review: @review %>