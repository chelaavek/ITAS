<div class="review-form">
<%= simple_form_for @review do |f| %>

    <%= f.input :title %>

    <%= f.input :body %>

    <%= f.input :rating, collection: [1, 2, 3, 4, 5], prompt: :translate %>

    <%= f.button :submit, class: "btn-primary" %>

    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>

<% end %>
</div>